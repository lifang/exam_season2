
<div class="main_title">
  <div class="m_t_btn"><button onclick="javascript:window.location.href='/papers/new?category=<%= params['category'] %>'">新建试卷</button></div>
  <div class="m_t_h">试卷列表</div>
  <div class="m_t_select">
    <select name="" onchange="javascript:select_checked(this,<%= params['category'] %>);">
      <option <% if params["checked"].nil? %> selected="selected" <% end %> value="<%= Paper::CHECKED[:ALL] %>">全部</option>
      <option <% if params["checked"]!=nil && params["checked"].to_i==Paper::CHECKED[:NO] %> selected="selected" <% end %> value="<%= Paper::CHECKED[:NO] %>">未审核</option>
      <option <% if params["checked"]!=nil && params["checked"].to_i==Paper::CHECKED[:YES] %> selected="selected" <% end %> value="<%= Paper::CHECKED[:YES] %>">已审核</option>
    </select>
  </div>
</div>

<div class="text_box">
  <% @papers.each do |paper| %>
    <div class="t_list">
      <div class="text_btn">
        <button class="t_btn">编辑</button>
        <button class="t_btn">审核</button>
        <button class="t_btn">预览</button>
      </div>
      <h2><%= paper.title %></h2>
      <span><%= paper.paper_url.nil? ? "未审核" : "已审核" %></span>
    </div>
  <% end %>
  <%=will_paginate @papers ,:previous_label=>" &lt;", :next_label=>" &gt;", :inner_window => 1 %>

</div>
