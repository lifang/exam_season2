  <div class="main_title">
    <div class="m_t_h">编辑科目</div>
  </div>
  <div class="text_box">
    <div class="bianji_ny">
      <%= form_for :edit,:url=>"/categories/#{params[:id]}/edit_post",:html=>{:onsubmit=>"return validate_category_form('edit')"} do |f| %>
       <div>科目名称 <input name="name" id="category_name" type="text" value="<%= @category.name %>"/></div>
