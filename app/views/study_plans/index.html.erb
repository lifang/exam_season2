<%= javascript_include_tag "study_plan" %>
<div class="main_title">
  <div class="m_t_h">学习计划</div>
</div>
<div class="text_box">
  <div class="bianji_ny">
    <% if @study.nil? %>
      <div>天数： <input name="" type="text" id="date"/></div>
      <div id="taks">任务：<a href="javascript:$('.add_renwu').css('display','');" class="gl_add_a">添加任务</a></div>
      <div><button class="t_btn">保存</button></div>
    <% else %>
      <input type="hidden" value="<%=  %>" id="task_ids" />
      <div>天数： <input value="<%= @study.study_date %>" id="date" type="text" /></div>
      <div>任务：<% @study.plan_tasks.each do |plan| %>
          <p class="rw_list"><span>周期：<%= PlanTask::PERIOD_NAMES[plan.period_types] %></span><span>任务：<%= PlanTask::TYPES_NAME[plan.task_types] %></span><span>数量：<%= plan.num %></span><span><a href="#">[删除]</a></span></p>
        <% end unless @study.blank? %>
        <div id="tasks">
          <a href="javascript:$('.add_renwu').css('display','');" class="gl_add_a">添加任务</a></div>
      </div>
      <div><button class="t_btn">提交更新</button></div>
    <% end %>
  </div>
</div>


<div class="add_renwu" style="display:none">
  <span class="yj_x"><img src="/assets/x.gif" onclick="javascript:$('.add_renwu').css('display','none');" /></span>
  <div>周期： <input name="period" type="radio" value="0" />每天 <input name="period" type="radio" value="1" />整个期间</div>
  <div>任务：
    <select name="">
      <option value="-1">任务类型</option>
      <option value="0">做题</option>
      <option value="1">背词</option>
      <option value="2">模拟考试</option>
    </select>
  </div>
  <div>数量：<input id="amount" type="text" /></div>
  <div><button class="t_btn">添加</button></div>
</div>

