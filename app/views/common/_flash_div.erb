<% if flash[:warn] %>
  <div id='flash_notice' class="tishi_tab">
    <p><%= flash[:warn] %></p>
  </div>
  <script type='text/javascript'>show_flash_div();</script>
<% elsif flash[:error] %>
  <div id='flash_notice' class="tishi_tab">
    <p><%=  flash[:error] %></p>
  </div>
  <script type='text/javascript'>show_flash_div();</script>
<% elsif flash[:notice] %>
  <div id='flash_notice' class="tishi_tab">
    <p><%= flash[:notice] %></p>
  </div>
  <script type='text/javascript'>show_flash_div();</script>
<% elsif flash[:pic_warn] %>
  <div class="add_codeTab" id="add_codeT">
    <span class="yj_x"><img src="/assets/x.gif" onclick="javascript:pop_window_closed(this);" /></span>
    <div class="add_codeList" style="text-align: center;"><%= flash[:pic_warn].html_safe %></div>
  </div>
  <script type='text/javascript'>generate_flash_div("#add_codeT");</script>
<% elsif flash[:success] %>
  <div id='flash_notice' class="tishi_tab">
    <p><%= flash[:success]%></p>
  </div>
  <script type='text/javascript'>show_flash_div();</script>
<% elsif flash[:failure] %>
  <div id='flash_notice' class="tishi_tab">
    <p><%= flash[:failure]%></p>
  </div>
  <script type='text/javascript'>show_flash_div();</script>
<% end %>
<% flash[:warn] = nil %>
<% flash[:error] = nil %>
<% flash[:pic_warn] = nil %>
<% flash[:success] = nil %>
<% flash[:failure] = nil %>
<% flash[:notice] = nil %>

  